{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "Node and Express Boilerplate",
  "main": "server.js",
  "author": "Bram Adl",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon server.js",
    "lint": "eslint --fix .",
    "pretty": "prettier --write .",
    "prepare": "husky install",
    "precommit": "yarn lint-staged",
    "prepush": "yarn lint"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.0.2",
    "http-status": "^1.5.2",
    "joi": "^17.6.0",
    "morgan": "^1.10.0",
    "winston": "^3.7.2",
    "xss": "^1.0.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^8.0.1",
    "lint-staged": ">=10",
    "nodemon": "^2.0.16",
    "prettier": "2.6.2"
  }
}
